<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray"
    tools:context=".impact">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="RRTS IMPACT"

            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:contentDescription="Impact Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image102"
                    android:layout_gravity="center" />

                <!-- Title TextView -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:text="Till date,Cumulative economic impact of 1.4 million passengers trip served"
                    android:textColor="@color/primaryColor"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <!-- Emission Reduced -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emission [CO2,CO,HC,NOX,PM] reduced"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/textView1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="666 Ton"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <!-- Emission Cost Saving -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emission cost savings"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/textView2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 1.89 Million"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <!-- Road Vehicle KM Saved -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Road vehicle Km saved"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/textView3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.46 Million"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <!-- Fuel Saved -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuel saved"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/textView4b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.34 Million Litre"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <!-- Travel Saved Due to Faster RRTS -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView5a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel time saved due to faster RRTS commuting"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/textView5b"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView5b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.77 Million Hours"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <!-- Travel Time Cost Saving -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/light_gray"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textView6a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel time cost savings"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/textView6b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 82.9 Million"
                        android:textColor="#00796B"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
